<form action="/tracks" method="post" enctype="multipart/form-data">  
  <label style="color: #00B7FF" class="upload_field">Upload a new track:</label>
  <input class="upload_field" style="color:#00B7FF" type="file" name="track"/>
  <button class="hint upload_field" type="submit">Upload</button>
  <span class="hint upload_field" style="color:#00B7FF">Supported files: MP3, Wav, and Ogg</span>
</form>
